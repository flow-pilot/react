{
  "compilerOptions": {
    "incremental": true,
    "target": "es2016",
    "jsx": "react-jsx",
    "module": "ESNext",
    "rootDir": "./src",
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}